<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backround_game" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="448dp"
        android:layout_height="103dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/geo_machin" />

    <ImageView
        android:id="@+id/piece2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/piece" />

    <TextView
        android:id="@+id/piece_text"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#FFC107" />

    <FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="150dp"
    android:background="@android:color/holo_blue_dark" />




    <FrameLayout
        android:id="@+id/progress_container"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners" >
        <View
            android:id="@+id/progress_fill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners_purple"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lives_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_full" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_full" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_full" />

        <ImageView
            android:id="@+id/heart4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_full" />

        <ImageView
            android:id="@+id/heart5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_full" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="640dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/end" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="680dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/pause" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <SeekBar
            android:id="@+id/volumeSeekBar2"
            style="@style/CustomSeekBarStyle"
            android:layout_width="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="640dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />


    </LinearLayout>

</RelativeLayout>
